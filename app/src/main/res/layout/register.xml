<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blank"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_layout"
        android:paddingTop="@dimen/activity_padding"
        android:paddingBottom="@dimen/activity_padding"
        android:background="@color/top"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_lef_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/top"
            android:onClick="onClick"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/iconsize"
            android:text="@string/icon_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@color/top"
            android:textSize="@dimen/iconsize"/>
    </LinearLayout>
        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_reg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hitball"
        android:src="@drawable/hitball"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_l"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_margin="@dimen/activity_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/id_Edtext1"
        android:textColor="@color/wenzi"
        android:gravity="center"
        android:layout_margin="@dimen/activity_margin"
        android:textSize="@dimen/font"
        android:singleLine="true"
        android:textColorHint="@color/tishiwenzi"
        android:hint="初始昵称"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        </LinearLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/id_Edtext2"
        android:textColor="@color/wenzi"
        android:gravity="center"
        android:layout_margin="@dimen/activity_margin"
        android:textColorHint="@color/tishiwenzi"
        android:singleLine="true"
        android:textSize="@dimen/font"
        android:hint="手机号码"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        </LinearLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
    <EditText
        android:inputType="textPassword"
        android:id="@+id/id_Edtext3"
        android:textColor="@color/wenzi"
        android:layout_margin="@dimen/activity_margin"
        android:textSize="@dimen/font"
        android:gravity="center"
        android:textColorHint="@color/tishiwenzi"
        android:singleLine="true"
        android:hint="设置密码"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        </LinearLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
    <EditText
        android:inputType="textPassword"
        android:id="@+id/id_Edtext4"
        android:textColor="@color/wenzi"
        android:layout_margin="@dimen/activity_margin"
        android:textSize="@dimen/font"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:textColorHint="@color/tishiwenzi"
        android:singleLine="true"
        android:hint="确认密码"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/id_Button_register1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_layout"
        android:background="@drawable/shape2"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"
        android:textColor="@color/anniuwenzi"
        android:text="注册"
        android:textSize="@dimen/button_font"/>
    </LinearLayout>
    </LinearLayout>
        </ScrollView>
</LinearLayout>
