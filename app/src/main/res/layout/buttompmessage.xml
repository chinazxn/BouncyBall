<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_layout"
    android:background="@color/bottom"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/id_tab_receive"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/buttonafter"
            android:textSize="@dimen/iconsize"
            android:text="@string/icon_receive"
            android:id="@+id/id_img_recive"
            android:background="@color/bottom"
            android:clickable="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_send"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/buttonbefore"
            android:textSize="@dimen/iconsize"
            android:text="@string/icon_send"
            android:id="@+id/id_img_send2"
            android:clickable="false"
            android:background="@color/bottom"/>
    </LinearLayout>
</LinearLayout>
